   	</f:SimpleForm>      -->    

    <TreeTable id="treeInspPlan" selectionMode="None"
               enableColumnReordering="false"
               alternateRowColors="true" 
               visibleRowCount="15"               
               visibleRowCountMode="Fixed"
               rows="{ path: 'data>/itp', parameters: { arrayNames:['children'], countMode: 'Inline', numberOfExpandedLevels: 3 } }">
        <extension>
          <m:HBox id="hboxApplToolbar" class="sapUiTinyMarginEnd sapUiTinyMarginTop" justifyContent="End">
           <m:OverflowToolbar id="otbApplToolbar" class="sapUiTinyMarginEnd sapUiTinyMarginTop">
            <m:Title id="title" text="" />

            <m:Switch id="switchSelectedOnly" type="AcceptReject" state="false" change="onSelectOnlyToggle">
				<m:layoutData>
					<m:FlexItemData id="fidSelectedOnly" growFactor="1" />
				</m:layoutData>
			</m:Switch>
            <m:Label id="lblSelectedOnly" text="{i18n>lblSelectedOnly}" labelFor="switchSelectedOnly" />

            <m:Switch id="switchExtendedDelivery" type="AcceptReject" state="false" change="applyFilters">
				<m:layoutData>
					<m:FlexItemData id="fidExtendedDelivery" growFactor="1"/>
				</m:layoutData>
			</m:Switch>
            <m:Label id="lblExtendedDelivery" text="{i18n>lblExtendedDelivery}" labelFor="applyFilters" />

            <m:ToolbarSpacer id="tbsApplToolbar" width="2rem"/>

            <m:Button id="btnLoad" text="{i18n>btnLoad}" icon="sap-icon://refresh" press="onLoadITP" />
            <m:Button id="btnCopyITP" text="{i18n>btnCopyITP}" icon="sap-icon://inspect" press="onCopyITP" />
            <m:Button id="btnSave" text="{i18n>btnSave}" icon="sap-icon://save" press="onSave" />
            <m:Button id="btnRelease" text="{i18n>btnRelease}" icon="sap-icon://begin" press="onRelease" />
            <m:Button id="btnDownload" text="{i18n>btnDownload}" icon="sap-icon://download" press="onDownload" />
            <m:Button id="btnSaveToDoc" text="{i18n>btnSaveToDoc}" icon="sap-icon://add-process" press="onSaveToDoc" /> 

           </m:OverflowToolbar>
          </m:HBox>
        </extension>
        <rowSettingsTemplate>
            <RowSettings id="myhigh1" highlight="{= ${data>Selectable} ? null : 'Warning' }" />
        </rowSettingsTemplate>
        <columns>
            <Column id="cln1" label="{i18n>colNum}" width="16rem" class="parent1">            
                <template>
                    <m:HBox id="_IDGenHBox1HBox" class="parent2">
                    <m:CheckBox id="chk1" visible="{data>Selectable}" selected="{data>Selected}" />
                    <m:Label id="txt1" text="{data>InspItemDescr}" class="sapUiTinyMarginTop" wrapping="false" />
                    </m:HBox>
                </template>
            </Column>
            <Column id="cln2" label="{i18n>colActivity}" width="9rem">
                <template>
                	<m:ComboBox id="_IDGenComboBox1" visible="{= ${data>Selectable} ? true : false }" selectionChange="onActivityChange"
				        items="{
					        path: 'data>ActivityScope'					
				        }" value="{data>ActivityDescr}">
				        <core:Item id="_IDGenItem1" key="{data>Activity}" text="{data>ActivityDescr}" />
			        </m:ComboBox>
                </template>
            </Column>
            <Column id="cln3" label="{i18n>colProcedure}" width="12rem">
                <template>
                    <m:Text id="txt3a" text="{data>ActivityDescr}" wrapping="false" />
                </template>
            </Column>
            <Column id="cln4" label="{i18n>colAcceptCriteria}" width="12rem">
                <template>
                    <m:Text id="txt3ac" text="{data>ActivityDescr}" wrapping="false" />
                </template>
            </Column>                        
            <Column id="cln5" label="{i18n>colRecord}" width="12rem">
                <template>
                    <m:ComboBox id="_IDGenComboBox1dc" selectedKey="{data>DocContent}" visible="{= ${data>Selectable} ? true : false }" 
				        items="{
					        path: 'data>/fixedVals/DocContent'					
				        }">
				        <core:Item id="_IDGenItem1dc" key="{data>value}" text="{data>text}" />
			        </m:ComboBox>
                </template>
            </Column>                        
            <Column id="cln6" label="{i18n>colFrequency}" width="12rem">
                <template>
                    <m:ComboBox id="_IDGenComboBox1fr" selectedKey="{data>Frequency}"  visible="{= ${data>Selectable} ? true : false }" 
				        items="{
					        path: 'data>/fixedVals/Frequency'					
				        }">
				        <core:Item id="_IDGenItem1fr" key="{data>value}" text="{data>text}" />
			        </m:ComboBox>
                </template>
            </Column>                        
            <Column id="cln7" label="{i18n>colCodeEKATO}" width="8rem">
                <template>
                    <m:ComboBox id="_IDGenComboBox1ekato" selectedKey="{data>PCodeInternal}"  visible="{= ${data>Selectable} ? true : false }" 
				        items="{
					        path: 'data>/fixedVals/PCode'					
				        }">
				        <core:Item id="_IDGenItem1ekato" key="{data>value}" text="{data>text}" />
			        </m:ComboBox>
                </template>
            </Column>                        
            <Column id="cln8" label="{i18n>colCodeCustomer}" width="8rem">
                <template>
                    <m:ComboBox id="_IDGenComboBox1cust" selectedKey="{data>PCodeCustomer}" visible="{= ${data>Selectable} ? true : false }" 
				        items="{
					        path: 'data>/fixedVals/PCode'					
				        }">
				        <core:Item id="_IDGenItem1cust" key="{data>value}" text="{data>text}" />
			        </m:ComboBox>
                </template>
            </Column>                        
            <Column id="cln9" label="{i18n>colCodeThirdParty}" width="8rem">
                <template>
                    <m:ComboBox id="_IDGenComboBox1tp" selectedKey="{data>PCodeThirdParty}" visible="{= ${data>Selectable} ? true : false }" 
				        items="{
					        path: 'data>/fixedVals/PCode'					
				        }">
				        <core:Item id="_IDGenItem1tp" key="{data>value}" text="{data>text}" />
			        </m:ComboBox>
                </template>
            </Column>                        
            <Column id="cln10" label="{i18n>colCodeSubVendor}" width="8rem">
                <template>
                    <m:ComboBox id="_IDGenComboBox1csv" selectedKey="{data>PCodeSubVendor}" visible="{= ${data>Selectable} ? true : false }" 
				        items="{
					        path: 'data>/fixedVals/PCode'					
				        }">
				        <core:Item id="_IDGenItem1csv" key="{data>value}" text="{data>text}" />
			        </m:ComboBox>
                </template>
            </Column>                        
            <Column id="cln11" label="{i18n>colLocation}" width="8rem">
                <template>
                    <m:ComboBox id="_IDGenComboBox1loc" selectedKey="{data>Location}" visible="{= ${data>Selectable} ? true : false }" 
				        items="{
					        path: 'data>/fixedVals/Location'					
				        }">
				        <core:Item id="_IDGenItem1loc" key="{data>value}" text="{data>text}" />
			        </m:ComboBox>
                </template>
            </Column>                        
<!--            <Column id="cln2" width="9rem">
                <m:Label text="Price" />
                <template>
                    <u:Currency value="{amount}" currency="{currency}" />
                </template>
            </Column>
            <Column id="cln3" width="11rem">
                <m:Label text="Size" />
                <template>
                    <m:Select items="{path: '/sizes', templateShareable: true}" selectedKey="{size}" visible="{= !!${size}}" forceSelection="false">
                        <core:Item key="{key}" text="{value}" />
                    </m:Select>
                </template>
            </Column>  -->
        </columns>    
    </TreeTable>
</mvc:View>
